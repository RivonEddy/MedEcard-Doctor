<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ForgotPassword2Activity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/app_logo"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the 6-digit OTP sent to your mail here."
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <EditText
        android:id="@+id/forgot_passwd_otp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter  OTP..."
        android:backgroundTint="@color/grad_purple"
        android:padding="15dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textStyle="italic"
        android:inputType="number"
        android:maxLength="6"
        android:drawableEnd="@drawable/edic_passwd_outline_black_24dp"
        android:drawablePadding="5dp"/>

    <Button
        android:id="@+id/otp_cnf_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textSize="17sp"
        android:textColor="@color/light_grey"
        android:layout_marginTop="20dp"
        android:background="@drawable/in_app_butt"/>

    <TextView
        android:id="@+id/back_btn_fp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- - Back - -"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryDark"/>

</LinearLayout>